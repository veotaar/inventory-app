extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div
      label(for='name') Category:
      input#name(type='text', placeholder='Woodwind etc.' name='name' value=(undefined===category ? '' : category.name), required='true')
    div
      label(for='description') Description:
      input#description(type='text', placeholder='nice category' description='description' value=(undefined===category ? '' : category.description), required='true')
    button(type='submit') Submit

  if errors
    ul
    for error in errors
      li!= error.msg
